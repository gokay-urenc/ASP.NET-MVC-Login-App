@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div style="background-color:aqua;width:50%;height:600px;margin:auto;margin-top:40px">
        <div class="container" style="margin-top:40px">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Adınız :</label>
                    @Html.TextBox("adi", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Soyadınız :</label>
                    @Html.TextBox("soyadi", null, new { @class = "form-control" })
                </div>

                <hr />

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-success" value="Giriş Yap"/>
                </div>
            }
        </div>
    </div>
</body>
</html>